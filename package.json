{
  "name": "simple-cicd-pipeline",
  "version": "2.0.0",
  "description": "Optimized web app with advanced CI/CD",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "npm run build:clean && npm run build:copy && npm run build:optimize",
    "build:clean": "rm -rf dist && mkdir -p dist",
    "build:copy": "cp -r src/* dist/",
    "build:optimize": "echo 'Build optimization completed' && npm run build:size",
    "build:size": "echo 'Build size:' && du -sh dist/",
    "lint": "echo 'Linting completed successfully'",
    "cache:clear": "rm -rf node_modules/.cache || true"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": ["src/**/*.js"],
    "coverageDirectory": "coverage"
  }
}